<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- WIZARD VIEW -->
    <record id="view_wizard_delete_task_form" model="ir.ui.view">
        <field name="name">wizard.delete.task.form</field>
        <field name="model">wizard.delete.task</field>
        <field name="arch" type="xml">
            <form string="Delete Task">
                <group>
                    <field name="title"/>
                </group>
                <footer>
                    <button string="Delete" type="object" name="action_delete_task" class="btn btn-primary"/>
                    <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
